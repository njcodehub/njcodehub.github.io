            console.log('âœ… SUCCESS!', response.status, response.text);

            // Afficher le message de succÃ¨s
            successMessage.classList.remove('hidden');

            // RÃ©initialiser le formulaire
            contactForm.reset();

            // Remettre le bouton en Ã©tat normal
            submitBtn.disabled = false;
            btnText.classList.remove('hidden');
            btnLoading.classList.add('hidden');
          })
          .catch(function (error) {
            console.log('âŒ FAILED...', error);

            // Afficher le message d'erreur
            errorMessage.classList.remove('hidden');

            // Remettre le bouton en Ã©tat normal
            submitBtn.disabled = false;
            btnText.classList.remove('hidden');
            btnLoading.classList.add('hidden');
          });
      });

      console.log('âœ… Event listener attachÃ© avec succÃ¨s!');
    }

    // Attacher l'event listener pour la premiÃ¨re fois
    attachSubmitListener();

    console.log('=== INITIALISATION TERMINÃ‰E AVEC SUCCÃˆS ===');
  }
  // DÃ©marrer l'initialisation directement
  initContactForm();

  // Solution standard Astro : Ã‰couter les transitions de page
  document.addEventListener('astro:after-swap', () => {
    if (window.location.pathname === '/contact/') {
      console.log('ðŸ”„ Navigation Astro dÃ©tectÃ©e, rÃ©initialisation du formulaire...');
      initContactForm();
    }
  });
</script>
