---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About - Who am I ?',
};
---

<link rel="stylesheet" href="/css/animations.css" />

<Layout metadata={metadata}>
  <section id="about" class="min-h-screen px-10 flex items-center justify-center scroll-mt-60 relative">
    <!-- Image de fond -->
    <div
      class="absolute inset-0 z-0"
      style="background-image: url('/Fond_About.webp'); background-size: cover; background-position: center; background-repeat: no-repeat; filter: blur(1px) brightness(0.9);"
    >
    </div>

    <!-- Contenu avec z-index pour être au-dessus de l'image -->
    <div class="relative z-10 max-w-7xl mx-auto w-full">
      <div class="grid lg:grid-cols-2 gap-6 lg:gap-16 items-center">
        <!-- Photo à gauche -->
        <div class="flex justify-center lg:justify-center animate-fade-in-up">
          <div class="relative -mt-8 sm:-mt-8 lg:mt-0">
            <div
              class="w-48 h-48 sm:w-64 sm:h-64 lg:w-96 lg:h-96 rounded-2xl overflow-hidden shadow-2xl border-2 border-[#00adb5] hover:shadow-[0_20px_40px_rgba(0,173,181,0.4)] transition-all duration-500 hover:-translate-y-2"
            >
              <img
                src="/profile.webp"
                alt="Professional headshot - Embedded systems engineer"
                class="w-full h-full object-cover"
              />
            </div>
          </div>
        </div>

        <!-- Contenu à droite -->
        <div
          class="bg-white/95 backdrop-blur-md p-4 sm:p-6 lg:p-8 rounded-2xl shadow-2xl border border-gray-200 text-center lg:text-center animate-fade-in-up"
          style="animation-delay: 0.2s;"
        >
          <h2 class="text-xl sm:text-2xl lg:text-4xl font-bold text-black mb-4 lg:mb-6">Who am I ?</h2>
          <p class="text-sm sm:text-base lg:text-lg text-gray-700 leading-relaxed">
            Hello, I'm Noëlie JESTIN. <br />
            I'm particularly interested in projects that serve the common good - renewable energy, sustainable IoT. <br
            />
            Feel free to contact me via the contact form or LinkedIn if you want to collaborate on a project.
          </p>

          <!-- LinkedIn Link -->
          <div class="mt-6 flex justify-center">
            <a
              href="https://www.linkedin.com/in/%F0%9F%91%89no%C3%ABlie-jestin%F0%9F%91%88-019076130/"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-3 px-6 py-3.5 rounded-full font-semibold text-white transition-all duration-200 hover:scale-105"
              style="background-color: #00adb5; border-color: #00adb5; box-shadow: 0 0 20px rgba(0, 173, 181, 0.5);"
              onmouseover="this.style.backgroundColor='#009aa1'; this.style.borderColor='#009aa1'; this.style.boxShadow='0 0 30px rgba(0, 173, 181, 0.7)'"
              onmouseout="this.style.backgroundColor='#00adb5'; this.style.borderColor='#00adb5'; this.style.boxShadow='0 0 20px rgba(0, 173, 181, 0.5)'"
              aria-label="Connect with Noëlie JESTIN on LinkedIn"
            >
              <!-- LinkedIn Icon SVG - Version simplifiée -->
              <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                <path
                  d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h14m-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93h2.79M6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37h2.77z"
                ></path>
              </svg>
              <span>LinkedIn</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
