---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About - Who am I ?',
};
---

<link rel="stylesheet" href="/css/animations.css" />

<Layout metadata={metadata}>
  <section id="about" class="min-h-screen px-10 flex items-center justify-center scroll-mt-60 relative">
    <!-- Image de fond -->
    <div
      class="absolute inset-0 z-0"
      style="background-image: url('/Fond_About.webp'); background-size: cover; background-position: center; background-repeat: no-repeat; filter: blur(1px) brightness(0.9);"
    >
    </div>

    <!-- Contenu avec z-index pour être au-dessus de l'image -->
    <div class="relative z-10 max-w-7xl mx-auto w-full">
      <div class="grid lg:grid-cols-2 gap-6 lg:gap-16 items-center">
        <!-- Photo à gauche -->
        <div class="flex justify-center lg:justify-center animate-fade-in-up">
          <div class="relative -mt-8 sm:-mt-8 lg:mt-0">
            <div
              class="w-48 h-48 sm:w-64 sm:h-64 lg:w-96 lg:h-96 rounded-2xl overflow-hidden shadow-2xl border-2 border-[#00adb5] hover:shadow-[0_20px_40px_rgba(0,173,181,0.4)] transition-all duration-500 hover:-translate-y-2"
            >
              <img
                src="/profile.webp"
                alt="Professional headshot - Embedded systems engineer"
                class="w-full h-full object-cover"
              />
            </div>
            <!-- Effet de glow -->
            <div
              class="absolute inset-0 rounded-2xl bg-gradient-to-br from-[#00adb5]/20 to-transparent pointer-events-none"
            >
            </div>
          </div>
        </div>

        <!-- Contenu à droite -->
        <div
          class="bg-white/95 backdrop-blur-md p-4 sm:p-6 lg:p-8 rounded-2xl shadow-2xl border border-gray-200 text-center lg:text-center animate-fade-in-up"
          style="animation-delay: 0.2s;"
        >
          <h2 class="text-xl sm:text-2xl lg:text-4xl font-bold text-black mb-4 lg:mb-6">Who am I ?</h2>
          <p class="text-sm sm:text-base lg:text-lg text-gray-700 leading-relaxed">
            Hello, I'm Noëlie JESTIN. <br />
            I'm particularly interested in projects that serve the common good - renewable energy, sustainable IoT. <br
            />
            Feel free to contact me if you want to collaborate on a project.
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>
